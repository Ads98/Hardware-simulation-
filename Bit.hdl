/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
Mux(a=loop,b=in,sel=load,out=link);
DFF(in=link,out=out,out=loop);
}


